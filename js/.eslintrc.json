{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "_": "readonly",
    "expect": "readonly",
    "inspect": "readonly"
  },
  "rules": {
    "indent": ["error", 2],
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  },
  "overrides": [
    {
      "files": ["**.test.js"],
      "env": {
        "mocha": true
      }
    }
  ]
}
